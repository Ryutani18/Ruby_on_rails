<div id="main_wrapper">
  <% @post.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_with model: @post do |f| %>
    <div class="form-group">
      <p><%= f.label :title %></p>
      <%= f.text_field :title, placeholder: :記事タイトル %>
    </div>
    <div class="form-group">
      <p><%= f.label :content %></p>
      <%= f.text_area :content, placeholder: :こんにちは。今日もおつかれさまです。, size: '40x10' %>
    </div>
    <%= f.submit :送信 %>
  <% end %>
</div>