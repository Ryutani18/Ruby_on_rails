<div id="main_wrapper">
  <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= @error_message if @error_message %>
  <h1>新規登録</h1>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <p><%= f.label :name, :お名前 %></p>
      <%= f.text_field :name, placeholder: :お名前 %>
    </div>
    <div class="form-group">
      <p><%= f.label :email, :メールアドレス %></p>
      <%= f.text_field :email, placeholder: :メールアドレス %>
    </div>
    <div class="form-group">
      <p><%= f.label :password, :パスワード %></p>
      <%= f.password_field :password, placeholder: :パスワード %>
    </div>
    <div class="form-group">
      <p><%= f.label :password_confirmation, :確認用 %></p>
      <%= f.password_field :password_confirmation, placeholder: :確認用 %>
    </div>
    <%= f.submit :新規登録 %>
  <% end %>
</div>