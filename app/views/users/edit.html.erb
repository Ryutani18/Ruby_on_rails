<div id="main_wrapper">
  <% @user.errors.full_messages.each do |message| %>
    <div class="form-error">
      <%= message %>
    </div>
  <% end %>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <p><%= f.label :name, :お名前 %></p>
      <%= f.text_field :name, placeholder: :お名前 %>
    </div>
    <div class="form-group">
      <p><%= f.label :email, :メールアドレス %></p>
      <%= f.text_field :email, placeholder: :メールアドレス %>
    </div>
    <div class="form-group">
      <p><%= f.label :image_name, :画像アップロード %></p>
      <%= f.file_field :image_name %>
    </div>
    <%= f.submit :送信 %>
  <% end %>
</div>